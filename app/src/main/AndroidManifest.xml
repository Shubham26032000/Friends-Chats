<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.friendschats">

    <application
        android:icon="@drawable/friend_chat_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/friend_chat_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.FriendsChats">
        <activity android:name=".Activities.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.ViewImageActivity" />
        <activity android:name=".Activities.SIgnInActivity" />
        <activity android:name=".Activities.SetUpProfileActivity" />
        <activity android:name=".Activities.SignUpActivity"/>
        <activity android:name=".Activities.ChatActivity" />
        <activity
            android:name=".Activities.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>